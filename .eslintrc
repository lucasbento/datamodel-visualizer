---
parser: babel-eslint

ecmaFeatures:
  modules: true

env:
  browser: true
  node: true
  mocha: true
  es6: true


globals:
  __DEV__: true
  __PRODUCTION__: true

rules:
  space-before-blocks: 2
  brace-style: 2
  keyword-spacing: 2
  no-unused-expressions: 2
  eol-last: 2
  dot-notation: 2
  dot-location: 0
  consistent-return: 2
  no-unused-vars: [2, args: none]
  no-shadow: 2
  no-undef: 2
  no-extra-semi: 2
  semi: 2
  newline-after-var: 2
  max-len: [1, 100, 4]
