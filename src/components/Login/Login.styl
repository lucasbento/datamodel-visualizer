.login-wrapper
  display flex
  align-items center
  justify-content center
  height 100vh
  width 100vw

.login
  max-width 320px
  text-align center
  h1
    margin-bottom 40px
    font-weight 200
    line-height 1.3


input
  display block
  padding 20px
  font-size 20px
  width 100%
  box-sizing border-box
  border none
  &:nth-child(1)
    border-bottom 2px solid #f5f5f5

.submit
  border 1px solid #DB3A4D
  background transparent
  color #DB3A4D
  border-radius 5px
  margin-top 20px
  cursor pointer
  &:active, &:focus, &:hover
    background #DB3A4D
    color white

span.error
  margin 10px 0
  display block
  font-weight bold
  color #DB3A4D
