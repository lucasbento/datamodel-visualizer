{
  "compilerOptions": {
    "removeComments": true,
    "preserveConstEnums": true,
    "jsx": "preserve",
    "pretty": true,
    "sourceMap": true,
    "target": "es2015",
    "outDir": "lib",
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./custom.d.ts"
  ]
}
